{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "breakOnLoad": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "smartStep": true
        },
        {
            "name": "Launch Edge against localhost",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "breakOnLoad": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "smartStep": true
        }
    ]
}